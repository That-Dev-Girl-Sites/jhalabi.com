<section class="category-list" aria-label="All blog categories">
  <div class="category-list-container">

    <p>Categories</p>

    {% assign categories = "accessibility, development, life, pregnancy, user-experience, wordpress, writing" | split: ", " %}

    <ul class="categories">
      {% for cat in categories %}
        {% if page.url contains cat %}
          <li class="current">{{ cat }}</li>
        {% else %}
          <li><a href="/blog/{{ cat }}" class="category {{ cat }}">{{ cat | replace: "-", " " }}</a></li>
        {% endif %}
      {% endfor %}
    </ul>

  </div>
</section>