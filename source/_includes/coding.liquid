{% include "partials/site-header" %}

<main class="default" id="main">

  <h1>{{ title }}</h1>

  {{ content }}

  <section class="coding-featured" aria-label="Featured projects">
    <h2>Featured projects</h2>
    <ul>
      {% for project in projects %}
        <li class="coding-project">
          <img src="/assets/images/{{ project.icon }}" alt="">

          <div>
            <h3>{{ project.title }}</h3>
            <p>{{ project.description }}</p>
            <p>
              {% for link in project.links %}
                <a href="{{ link.url }}" alt="{{ link.alt }}" class="button on-white">{{ link.text }}</a>
              {% endfor %}
            </p>
          </div>
        </li>
      {% endfor %}
    </ul>
  </section>

  {% include "partials/section-donate" %}

</main>

{% include "partials/site-footer" %}
